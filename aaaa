<SummaryCard
  title={p.name.replace(/^.*\./, '')}
  total={p.total}
  stats={[
    { label: 'Employees', value: p.Employee },
    { label: 'Contractors', value: p.Contractor }
  ]}
  icon={<i className="fa-solid fa-building-user" />}
  flag={
    p.name.includes('Pune') ? indiaFlag :
    p.name.includes('Quezon') ? philippinesFlag :
    p.name.includes('Tokyo') ? japanFlag :
    p.name.includes('Kuala') ? malaysiaFlag :
    p.name.includes('Taguig') ? taguigFlag : null
  }
  sx={{ width: '100%' }}
/>


...

import indiaFlag from '../assets/flags/india.png';
import japanFlag from '../assets/flags/japan.png';
import malaysiaFlag from '../assets/flags/malaysia.png';
import philippinesFlag from '../assets/flags/philippines.png';
import taguigFlag from '../assets/flags/Taguig.png';





// src/components/SummaryCard.jsx

import React from 'react';
import { Card, CardContent, Box, Typography, Avatar, useTheme, Tooltip } from '@mui/material';

export default function SummaryCard({
  title,
  total,
  stats = [],
  icon,
  titleColor = '#FFEB3B',
  totalColor = '#FFFFFF',
  statColors = [],
  flag, // path to flag image
  sx = {}
}) {
  const theme = useTheme();

  return (
    <Card
      sx={{
        ...sx,
        borderRadius: 3,
        overflow: 'hidden',
        background: 'linear-gradient(to bottom, rgba(30,30,30,0.9), rgba(15,15,15,0.8))',
        border: '1px solid rgba(255, 193, 7, 0.3)',
        backdropFilter: 'blur(10px)',
        color: '#fff',
        transition: 'transform 0.2s ease',
        '&:hover': {
          transform: 'scale(1.02)',
          boxShadow: `0 0 10px ${titleColor}`
        }
      }}
      elevation={3}
    >
      <CardContent>
        <Box display="flex" justifyContent="space-between" alignItems="center" mb={1}>
          <Box display="flex" alignItems="center" gap={1}>
            {flag && (
              <Tooltip title={title}>
                <Avatar
                  src={flag}
                  alt={title}
                  sx={{ width: 24, height: 24, borderRadius: '4px' }}
                />
              </Tooltip>
            )}
            <Typography variant="subtitle2" sx={{ color: titleColor, fontWeight: 600 }}>
              {title}
            </Typography>
          </Box>
          <Box sx={{ fontSize: 26, color: titleColor }}>{icon}</Box>
        </Box>

        <Typography variant="h4" sx={{ color: totalColor, fontWeight: 700, mb: stats.length ? 1 : 0 }}>
          {total}
        </Typography>

        {stats.map((stat, index) => (
          <Typography
            key={index}
            variant="body2"
            sx={{ color: statColors[index] || '#B0BEC5' }}
          >
            {stat.label}: <strong>{stat.value}</strong>
          </Typography>
        ))}
      </CardContent>
    </Card>
  );
}