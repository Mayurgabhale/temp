// src/hooks/useLiveOccupancy.js
import { useEffect, useState } from 'react';
import { fetchLiveSummary } from '../api/occupancy.service';  // ✅ FIXED

export default function useLiveOccupancy() {
  const [occupancyData, setOccupancyData] = useState(null);
  const [loading, setLoading] = useState(true);

  const loadData = async () => {
    setLoading(true);
    try {
      const data = await fetchLiveSummary();  // ✅ FIXED
      setOccupancyData(data);
    } catch (e) {
      console.error('Failed to fetch occupancy data', e);
    } finally {
      setLoading(false);
    }
  };

  useEffect(() => {
    loadData();
    const interval = setInterval(loadData, 30000);
    return () => clearInterval(interval);
  }, []);

  return { occupancyData, loading };
}