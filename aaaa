// src/components/Dashboard.jsx

import React from 'react';
import { useLiveOccupancy } from '../hooks/useLiveOccupancy';

const partitionNames = ['Partition A', 'Partition B', 'Partition C'];

const Dashboard = () => {
  const { data, loading } = useLiveOccupancy(partitionNames);

  return (
    <div className="p-8">
      <h1 className="text-3xl font-bold mb-6">Occupancy Dashboard</h1>

      {loading ? (
        <p className="text-gray-500">Loading occupancy data...</p>
      ) : (
        <div className="grid grid-cols-1 md:grid-cols-3 gap-6">
          {data.map((partition) => (
            <div
              key={partition.partitionName}
              className="bg-white shadow rounded-xl p-6 text-center"
            >
              <h2 className="text-xl font-semibold mb-2">{partition.partitionName}</h2>
              <p className="text-4xl text-blue-600">{partition.occupancy}</p>
              <p className="text-sm text-gray-400 mt-1">occupants</p>
            </div>
          ))}
        </div>
      )}
    </div>
  );
};

export default Dashboard;