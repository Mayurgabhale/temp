<Pie
  data={renderData}
  dataKey="value"
  nameKey="name"
  innerRadius={70}
  outerRadius={120}
  paddingAngle={4}
  isAnimationActive
  animationDuration={animationDuration}
  label={({ percent }) =>
    percent !== undefined ? `${(percent * 100).toFixed(0)}%` : ''
  }
  labelLine={false}
>
  {renderData.map((_, i) => (
    <Cell key={i} fill={colors[i % colors.length]} />
  ))}
</Pie>