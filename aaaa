import React from 'react';
import Header from './Header';

export default function Layout({ children }) {
  return (
    <>
      <Header />
      <div style={{ padding: '16px' }}>
        {children}
      </div>
    </>
  );
}











import React, { lazy, Suspense } from 'react';
import { BrowserRouter, Routes, Route } from 'react-router-dom';
import LoadingSpinner from '../components/LoadingSpinner';
import Layout from '../components/Layout';

const Dashboard               = lazy(() => import('../pages/Dashboard'));
const History                 = lazy(() => import('../pages/History'));
const PartitionDetail         = lazy(() => import('../pages/PartitionDetail'));
const PartitionDetailDetails  = lazy(() => import('../pages/PartitionDetailDetails'));

export default function AppRoutes() {
  return (
    <BrowserRouter>
      <Suspense fallback={<LoadingSpinner />}>
        <Routes>
          <Route
            path="/"
            element={
              <Layout>
                <Dashboard />
              </Layout>
            }
          />
          <Route
            path="/history"
            element={
              <Layout>
                <History />
              </Layout>
            }
          />
          <Route
            path="/partition/:partition"
            element={
              <Layout>
                <PartitionDetail />
              </Layout>
            }
          />
          <Route
            path="/partition/:partition/history"
            element={
              <Layout>
                <History />
              </Layout>
            }
          />
          <Route
            path="/partition/:partition/details"
            element={
              <Layout>
                <PartitionDetailDetails />
              </Layout>
            }
          />
        </Routes>
      </Suspense>
    </BrowserRouter>
  );
}



