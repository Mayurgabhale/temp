function showToastAlert(title, message) {
  const alertType = getAlertType(title); // e.g., "Offline", "Online"
  const containerId = `alert-window-${alertType}`;
  let container = document.getElementById(containerId);

  if (!container) {
    container = document.createElement('div');
    container.id = containerId;
    container.className = 'alert-window';
    container.style.position = 'fixed';
    container.style.top = '50px';
    container.style.right = `${20 + Object.keys(document.getElementsByClassName('alert-window')).length * 320}px`;
    container.style.width = '300px';
    container.style.zIndex = 1000;
    document.body.appendChild(container);
  }

  const alertPanel = document.createElement('div');
  alertPanel.className = 'alert-toast-panel';

  alertPanel.innerHTML = `
    <div class="alert-header">
      <strong>${title}</strong>
      <span class="close-btn" onclick="this.parentElement.parentElement.remove()">Ã—</span>
    </div>
    <div class="alert-body"><pre>${message}</pre></div>
  `;

  // Apply cascading position offset
  const offset = container.children.length * 10;
  alertPanel.style.marginTop = `${offset}px`;
  alertPanel.style.position = 'relative';
  alertPanel.style.boxShadow = '0px 4px 8px rgba(0,0,0,0.2)';

  container.appendChild(alertPanel);

  // Auto-dismiss after 10 seconds
  setTimeout(() => alertPanel.remove(), 10000);
}

function getAlertType(title) {
  if (title.includes("Offline")) return "Offline";
  if (title.includes("Online")) return "Online";
  if (title.includes("Warning")) return "Warning";
  if (title.includes("Error")) return "Error";
  if (title.includes("Alert")) return "Alert";
  return "General";
}




