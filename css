{showFromCal && (
  <StaticDatePicker
    displayStaticWrapperAs="desktop"
    value={from}
    onChange={(newValue) => {
      setFrom(newValue);
      // Don't close here - let onAccept or onClose handle it
    }}
    onAccept={() => setShowFromCal(false)}
    onClose={() => setShowFromCal(false)}
    renderInput={(params) => <TextField {...params} />}
  />
)}

{showToCal && (
  <StaticDatePicker
    displayStaticWrapperAs="desktop"
    value={to}
    onChange={(newValue) => {
      setTo(newValue);
      // Don't close here - let onAccept or onClose handle it
    }}
    onAccept={() => setShowToCal(false)}
    onClose={() => setShowToCal(false)}
    renderInput={(params) => <TextField {...params} />}
  />
)}