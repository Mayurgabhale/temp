let statusLogoElement = document.getElementById(`status-logo-${safeIp}`);
if (statusLogoElement) {
    const lastEntry = history.length > 0 ? history[history.length - 1] : null;
    const lastStatus = lastEntry ? lastEntry.status : "Unknown";
    const lastTimestamp = lastEntry ? new Date(lastEntry.timestamp).getTime() : 0;
    const now = Date.now();
    const downtimeDuration = (now - lastTimestamp) / 1000;

    let logo = 'âšª'; // Default

    if (lastStatus === "Offline" && downtimeDuration >= 300) {
        logo = 'ğŸ”´'; // Offline > 5 min
    } else if (lastStatus === "Offline") {
        logo = 'ğŸŸ¡'; // Offline < 5 min
    } else if (lastStatus === "Online") {
        logo = 'ğŸŸ¢'; // Online
    }

    statusLogoElement.innerText = logo;
}