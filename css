<Tooltip
  contentStyle={{ backgroundColor: '#FFD666', borderColor: lineColor, padding: 8 }}
  content={({ active, payload, label }) => {
    if (!active || !payload || !payload.length) return null;
    const datum = payload[0].payload;

    // Static breakdown for Pune (you can later parameterize this if needed)
    const isPune = label?.toLowerCase().includes('podium') || label?.toLowerCase().includes('2nd') || label?.toLowerCase().includes('tower');
    const breakdown = isPune ? (
      <>
        <hr style={{ margin: '6px 0', borderColor: '#ccc' }} />
        <div><strong>Breakdown:</strong></div>
        <div>Employee: 507</div>
        <div>Contractor: 78</div>
        <div>Property Mgmt: 22</div>
        <div>Temp Badge: 4</div>
        <div>Visitor: 10</div>
        <div>Total: 621</div>
      </>
    ) : null;

    return (
      <div style={{
        backgroundColor: '#FFD666',
        border: `1px solid ${lineColor}`,
        borderRadius: 4,
        padding: 8,
      }}>
        <div style={{ fontWeight: 700, marginBottom: 4 }}>{label}</div>
        <div>Headcount: {datum.headcount}</div>
        <div>Usage %: {datum.percentage}%</div>
        <div>Seat Capacity: {datum.capacity}</div>
        {breakdown}
      </div>
    );
  }}
/>