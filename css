  <div class="custom-alert-content">
    <div class="custom-alert-header">
      <span id="custom-alert-title">Notification</span>
      <div class="custom-alert-controls">
        <button onclick="minimizeAlert()">_</button>
        <button onclick="closeAlert()">Ã—</button>
      </div>
    </div>
    <div class="custom-alert-body" id="custom-alert-body"></div>
  </div>
</div>








.custom-alert {
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 9999;
  background-color: #fff;
  border: 2px solid #333;
  border-radius: 10px;
  width: 400px;
  box-shadow: 0 0 20px rgba(0,0,0,0.3);
  font-family: sans-serif;
}

.custom-alert-content {
  display: flex;
  flex-direction: column;
}

.custom-alert-header {
  background-color: #f5f5f5;
  padding: 10px;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.custom-alert-controls button {
  margin-left: 5px;
  cursor: pointer;
  border: none;
  background: none;
  font-size: 16px;
}

.custom-alert-body {
  padding: 15px;
  white-space: pre-line;
}

.minimized .custom-alert-body {
  display: none;
}






function notifyWindows(title, message) {
  const alertBox = document.getElementById('custom-alert');
  const alertTitle = document.getElementById('custom-alert-title');
  const alertBody = document.getElementById('custom-alert-body');

  alertTitle.textContent = title;
  alertBody.textContent = message;

  alertBox.classList.remove('minimized');
  alertBox.style.display = 'block';
}

function closeAlert() {
  const alertBox = document.getElementById('custom-alert');
  alertBox.style.display = 'none';
}

function minimizeAlert() {
  const alertBox = document.getElementById('custom-alert');
  alertBox.classList.toggle('minimized');
}