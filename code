const pickSuggestion = emp => {
  if (!emp) {
    setSuggestions([]); // Clear if null
    return;
  }
  selectEmployee(emp);
  setSuggestions([]); // Also clear after selecting one
};






...
<SearchBar
  value={searchTerm}
  onChange={setSearchTerm}
  onSearch={handleSearch}
  suggestions={suggestions}
  onSelectSuggestion={pickSuggestion}
/>