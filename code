const region = currentRegion?.toUpperCase() || "GLOBAL";
const titleElement = document.getElementById("region-title");

const logoHTML = `
  <span style="display: flex; align-items: center;">
    <img src="images/header-logo.png" alt="Logo"
         style="height: 32px; width: auto; object-fit: contain; margin-right: 10px;" />
  </span>
`;

const text = selectedCity !== "all"
  ? `${region}, ${selectedCity} Summary`
  : `${region} Summary`;

titleElement.innerHTML = `${logoHTML}<span>${text}</span>`;