/* 3D Camera container for layout */
.camera-3d-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 160px;
  margin-bottom: 10px;
}

.camera-3d-container {
  width: 100%;
  max-width: 220px;
  height: 140px;
  position: relative;
  animation: cameraFloat 4s ease-in-out infinite alternate;
  transform-origin: center;
}

/* Embedded Sketchfab iframe styling */
.camera-3d-container iframe {
  width: 100%;
  height: 100%;
  border: none;
  border-radius: 10px;
  pointer-events: none; /* prevents interaction while still animating */
  transform: rotateY(0deg);
  animation: rotateCamera 6s linear infinite;
}

/* Status LED (blinking) */
.status-led {
  position: absolute;
  bottom: 8px;
  right: 8px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.4);
}

/* Online / Offline blink */
.status-led.online {
  background-color: #2cb67d;
  animation: blinkGreen 1.2s infinite;
}

.status-led.offline {
  background-color: #ef4565;
  animation: blinkRed 1.2s infinite;
}

/* Floating movement */
@keyframes cameraFloat {
  0% {
    transform: translateX(-10px);
  }
  100% {
    transform: translateX(10px);
  }
}

/* Y-axis rotation of iframe */
@keyframes rotateCamera {
  0% {
    transform: rotateY(0deg);
  }
  100% {
    transform: rotateY(360deg);
  }
}

/* Blinking LED animations */
@keyframes blinkGreen {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.3; }
}

@keyframes blinkRed {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.1; }
}