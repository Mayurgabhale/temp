<Container maxWidth={false} disableGutters sx={{ pt: 2, pb: 4 }}>
  <Box display="flex" flexDirection="row" flexWrap="wrap" sx={{ px: '20px', gap: 3 }}>
    {/* LEFT SIDE: Date Picker */}
    <Box sx={{ minWidth: 250 }}>
      <LocalizationProvider dateAdapter={AdapterDateFns}>
        <DatePicker
          label="Select date"
          value={date}
          onChange={(d) => {
            setDate(d);
            setShowDetails(false);
          }}
          renderInput={(params) => <TextField fullWidth {...params} />}
        />
      </LocalizationProvider>
    </Box>

    {/* RIGHT SIDE: Main Table and Button */}
    {date && summary && (
      <Box sx={{ flex: 1, minWidth: 600 }}>
        <Paper elevation={3} sx={{ px: 4, py: 3, border: '3px solid #000', borderRadius: 2 }}>
          {/* ... Summary Table Here (unchanged) ... */}
          <Table sx={{ border: '2px solid #000' }}>
            {/* TableHead and TableBody code same as before */}
          </Table>
        </Paper>

        {/* Buttons */}
        <Box display="flex" justifyContent="center" sx={{ mt: 1 }}>
          <Button
            variant="contained"
            sx={{ bgcolor: '#FFC107', color: '#000' }}
            onClick={() => setShowDetails((v) => !v)}
          >
            {showDetails ? 'Hide Details' : 'See Details'}
          </Button>
          {showDetails && (
            <Button
              variant="outlined"
              sx={{ ml: 2, borderColor: '#FFC107', color: '#FFC107' }}
              onClick={exportExcel}
            >
              Export to Excel
            </Button>
          )}
        </Box>

        {/* Details Table */}
        {showDetails && (
          <Box sx={{ mt: 3 }}>
            <Paper elevation={1} sx={{ px: '40px', py: 1, border: '3px solid #000', borderRadius: 2 }}>
              {/* ...Details Table Code Here (unchanged)... */}
            </Paper>
          </Box>
        )}
      </Box>
    )}
  </Box>
</Container>